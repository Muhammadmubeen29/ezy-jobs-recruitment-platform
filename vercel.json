{
  "version": 2,
  "builds": [
    { "src": "server/app.js", "use": "@vercel/node" },
    { "src": "server/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "server/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}
